---
// Header component con navegación principal
---

<header class="bg-white shadow-sm sticky top-0 z-50">
  <nav class="container mx-auto px-4 py-4 md:py-2">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center">
        <img
          src="/images/services/Header/chiletour.png"
          alt="Chile Tour Logo"
          class="w-8 h-8 md:w-12 md:h-12 object-contain mr-2"
        />
        <span class="text-2xl font-bold text-blue-600">TransferChile</span>
        <span class="text-2xl font-bold text-gray-900">Tour</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="/" class="text-gray-700 hover:text-blue-600 transition-colors">
          Inicio
        </a>
        <a
          href="/servicios"
          class="text-gray-700 hover:text-blue-600 transition-colors"
        >
          Servicios
        </a>

        <a
          href="/contacto"
          class="text-gray-700 hover:text-blue-600 transition-colors"
        >
          Contacto
        </a>
        <a
          href="/empresas"
          class="group relative inline-flex items-center gap-2 bg-gradient-to-r from-slate-700 to-slate-900 text-white px-4 py-2 rounded-full font-semibold hover:from-slate-800 hover:to-black transition-all hover:scale-105 shadow-md hover:shadow-lg"
        >
          <svg
            class="w-4 h-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
            ></path>
          </svg>
          <span>Empresas</span>
        </a>
      </div>

      <!-- CTA Button -->
      <div class="hidden md:block">
        <a
          href="/contacto"
          class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors"
        >
          Reservar ahora
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden text-gray-700 hover:text-blue-600"
        aria-label="Abrir menú"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4">
      <div class="flex flex-col space-y-4">
        <a href="/" class="text-gray-700 hover:text-blue-600 transition-colors">
          Inicio
        </a>
        <a
          href="/servicios"
          class="text-gray-700 hover:text-blue-600 transition-colors"
        >
          Servicios
        </a>
        <a
          href="/empresas"
          class="relative inline-flex items-center gap-2 bg-gradient-to-r from-slate-700 to-slate-900 text-white px-6 py-3 rounded-lg font-semibold hover:from-slate-800 hover:to-black transition-all text-center shadow-md"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
            ></path>
          </svg>
          <span>Servicios Corporativos</span>
          <span class="absolute top-2 right-2 flex h-2 w-2">
            <span
              class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-400 opacity-75"
            ></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-blue-500"
            ></span>
          </span>
        </a>
        <a
          href="/contacto"
          class="text-gray-700 hover:text-blue-600 transition-colors"
        >
          Contacto
        </a>
        <a
          href="/contacto"
          class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors text-center"
        >
          Reservar ahora
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const button = document.getElementById("mobile-menu-button");
  const menu = document.getElementById("mobile-menu");

  button?.addEventListener("click", () => {
    menu?.classList.toggle("hidden");
  });
</script>
