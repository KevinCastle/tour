---
import Layout from '../layouts/Layout.astro';

// Información de contacto
const contactInfo = {
  phone: '+56 9 XXXX XXXX',
  email: 'info@transferchiletour.com',
  whatsapp: '+56 9 XXXX XXXX',
  address: 'Santiago, Chile',
  hours: 'Lun - Dom: 7:00 - 22:00'
};
---

<Layout
  title="Contacto - TransferChileTour"
  description="Contáctanos para reservar tu próximo tour o traslado. Estamos aquí para ayudarte a planear tu experiencia perfecta en Chile."
>
  <!-- Header section -->
  <section class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-16">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Contáctanos</h1>
      <p class="text-xl text-gray-100 max-w-2xl">
        Estamos aquí para ayudarte a planear tu experiencia perfecta en Chile
      </p>
    </div>
  </section>

  <section class="container mx-auto px-4 py-16">
    <div class="grid md:grid-cols-2 gap-12 max-w-6xl mx-auto">
      <!-- Información de Contacto -->
      <div>
        <h2 class="text-3xl font-bold text-gray-900 mb-6">Información de Contacto</h2>
        <p class="text-gray-600 mb-8">
          Ponte en contacto con nosotros y te responderemos lo antes posible. También puedes llamarnos o escribirnos por WhatsApp.
        </p>

        <div class="space-y-6">
          <!-- Teléfono -->
          <div class="flex items-start">
            <div class="bg-blue-100 text-blue-600 p-3 rounded-lg mr-4">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900 mb-1">Teléfono</h3>
              <a href={`tel:${contactInfo.phone}`} class="text-gray-600 hover:text-blue-600">
                {contactInfo.phone}
              </a>
            </div>
          </div>

          <!-- Email -->
          <div class="flex items-start">
            <div class="bg-blue-100 text-blue-600 p-3 rounded-lg mr-4">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900 mb-1">Email</h3>
              <a href={`mailto:${contactInfo.email}`} class="text-gray-600 hover:text-blue-600">
                {contactInfo.email}
              </a>
            </div>
          </div>

          <!-- WhatsApp -->
          <div class="flex items-start">
            <div class="bg-green-100 text-green-600 p-3 rounded-lg mr-4">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z" />
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900 mb-1">WhatsApp</h3>
              <a
                href={`https://wa.me/${contactInfo.whatsapp.replace(/\s/g, '')}`}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-600 hover:text-green-600"
              >
                {contactInfo.whatsapp}
              </a>
            </div>
          </div>

          <!-- Horarios -->
          <div class="flex items-start">
            <div class="bg-blue-100 text-blue-600 p-3 rounded-lg mr-4">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900 mb-1">Horario de Atención</h3>
              <p class="text-gray-600">{contactInfo.hours}</p>
            </div>
          </div>

          <!-- Dirección -->
          <div class="flex items-start">
            <div class="bg-blue-100 text-blue-600 p-3 rounded-lg mr-4">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900 mb-1">Ubicación</h3>
              <p class="text-gray-600">{contactInfo.address}</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Formulario de Contacto -->
      <div>
        <div class="bg-white rounded-xl shadow-lg p-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Envíanos un mensaje</h2>

          <!-- Formulario con Web3Forms -->
          <form
            id="contact-form"
            action="https://api.web3forms.com/submit"
            method="POST"
            class="space-y-6"
          >
            <!-- Web3Forms Access Key - REEMPLAZA con tu access key real -->
            <input type="hidden" name="access_key" value="YOUR_ACCESS_KEY_HERE" />

            <!-- Configuración adicional de Web3Forms -->
            <input type="hidden" name="subject" value="Nuevo mensaje desde TransferChileTour" />
            <input type="hidden" name="from_name" value="TransferChileTour Website" />
            <input type="hidden" name="redirect" value="https://transferchiletour.com/contacto?success=true" />

            <!-- Honeypot anti-spam (campo invisible) -->
            <input type="checkbox" name="botcheck" class="hidden" style="display: none;" />

            <!-- Nombre -->
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                Nombre completo *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="Tu nombre"
              />
            </div>

            <!-- Email -->
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                Email *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="tu@email.com"
              />
            </div>

            <!-- Teléfono -->
            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                Teléfono
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="+56 9 XXXX XXXX"
              />
            </div>

            <!-- Servicio de interés -->
            <div>
              <label for="service" class="block text-sm font-medium text-gray-700 mb-2">
                Servicio de interés
              </label>
              <select
                id="service"
                name="service"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              >
                <option value="">Selecciona un servicio</option>
                <option value="tour">Tour</option>
                <option value="traslado">Traslado</option>
                <option value="formalidades">Formalidades</option>
                <option value="personalizado">Tour personalizado</option>
                <option value="otro">Otro</option>
              </select>
            </div>

            <!-- Mensaje -->
            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                Mensaje *
              </label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="Cuéntanos sobre tu consulta..."
              ></textarea>
            </div>

            <!-- Submit Button -->
            <button
              type="submit"
              class="w-full bg-blue-600 text-white py-4 rounded-lg font-semibold hover:bg-blue-700 transition-colors"
            >
              Enviar mensaje
            </button>

            <p class="text-sm text-gray-500 text-center">
              * Campos obligatorios
            </p>
          </form>

          <!-- Mensaje de éxito/error (hidden por defecto) -->
          <div id="form-message" class="hidden mt-4 p-4 rounded-lg"></div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  // Integración con Web3Forms
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const messageDiv = document.getElementById('form-message') as HTMLDivElement;
  const submitButton = form?.querySelector('button[type="submit"]') as HTMLButtonElement;

  // Verificar si hay parámetro success en URL
  const urlParams = new URLSearchParams(window.location.search);
  if (urlParams.get('success') === 'true') {
    showMessage('¡Mensaje enviado exitosamente! Te responderemos pronto.', 'success');
  }

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    // Deshabilitar botón y cambiar texto
    const originalText = submitButton.textContent;
    submitButton.disabled = true;
    submitButton.textContent = 'Enviando...';

    try {
      const formData = new FormData(form);
      const response = await fetch('https://api.web3forms.com/submit', {
        method: 'POST',
        body: formData
      });

      const data = await response.json();

      if (data.success) {
        showMessage('¡Mensaje enviado exitosamente! Te responderemos pronto.', 'success');
        form.reset();
      } else {
        showMessage(
          'Hubo un error al enviar el mensaje. Por favor, intenta nuevamente o contáctanos directamente por WhatsApp.',
          'error'
        );
      }
    } catch (error) {
      showMessage(
        'Hubo un error al enviar el mensaje. Por favor, intenta nuevamente o contáctanos directamente por WhatsApp.',
        'error'
      );
    } finally {
      // Restaurar botón
      submitButton.disabled = false;
      submitButton.textContent = originalText;
    }
  });

  function showMessage(text: string, type: 'success' | 'error') {
    messageDiv.textContent = text;
    messageDiv.className = `mt-4 p-4 rounded-lg ${
      type === 'success'
        ? 'bg-green-50 text-green-800 border border-green-200'
        : 'bg-red-50 text-red-800 border border-red-200'
    }`;
    messageDiv.classList.remove('hidden');
    messageDiv.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
  }
</script>
