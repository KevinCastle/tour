---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Generate static paths for all services
export async function getStaticPaths() {
  const servicios = await getCollection('servicios');
  return servicios.map(servicio => ({
    params: { slug: servicio.slug },
    props: { servicio }
  }));
}

const { servicio } = Astro.props;
const { Content } = await servicio.render();

// Category badge color
const categoryColors = {
  tour: 'bg-blue-100 text-blue-800',
  traslado: 'bg-green-100 text-green-800',
  formalidades: 'bg-purple-100 text-purple-800'
};

const categoryLabels = {
  tour: 'Tour',
  traslado: 'Traslado',
  formalidades: 'Formalidades'
};
---

<Layout
  title={`${servicio.data.title} - TransferChileTour`}
  description={servicio.data.description}
  image={servicio.data.images[0]}
>
  <!-- Structured Data for SEO -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": servicio.data.category === 'tour' ? "TouristAttraction" : "Service",
    "name": servicio.data.title,
    "description": servicio.data.description,
    "image": servicio.data.images,
    "provider": {
      "@type": "LocalBusiness",
      "name": "TransferChileTour",
      "url": "https://transferchiletour.com"
    },
    "offers": {
      "@type": "Offer",
      "price": servicio.data.price,
      "priceCurrency": "CLP",
      "availability": "https://schema.org/InStock"
    },
    "duration": servicio.data.duration,
    "maximumAttendeeCapacity": servicio.data.capacity
  })} />

  <!-- Breadcrumb -->
  <div class="bg-gray-50 border-b">
    <div class="container mx-auto px-4 py-4">
      <nav class="flex items-center space-x-2 text-sm">
        <a href="/" class="text-gray-600 hover:text-blue-600">Inicio</a>
        <span class="text-gray-400">/</span>
        <a href="/servicios" class="text-gray-600 hover:text-blue-600">Servicios</a>
        <span class="text-gray-400">/</span>
        <span class="text-gray-900">{servicio.data.title}</span>
      </nav>
    </div>
  </div>

  <article class="container mx-auto px-4 py-12">
    <div class="max-w-5xl mx-auto">
      <!-- Header -->
      <div class="mb-8">
        <span class={`inline-block px-3 py-1 rounded-full text-sm font-semibold mb-4 ${categoryColors[servicio.data.category]}`}>
          {categoryLabels[servicio.data.category]}
        </span>
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          {servicio.data.title}
        </h1>
        <p class="text-xl text-gray-600">
          {servicio.data.description}
        </p>
      </div>

      <!-- Image Gallery -->
      <div class="mb-12">
        {servicio.data.images.length > 1 ? (
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="md:col-span-2">
              <img
                src={servicio.data.images[0]}
                alt={servicio.data.title}
                class="w-full h-96 object-cover rounded-xl"
                loading="eager"
              />
            </div>
            {servicio.data.images.slice(1).map((image: string) => (
              <img
                src={image}
                alt={servicio.data.title}
                class="w-full h-64 object-cover rounded-xl"
                loading="lazy"
              />
            ))}
          </div>
        ) : (
          <img
            src={servicio.data.images[0]}
            alt={servicio.data.title}
            class="w-full h-96 object-cover rounded-xl"
            loading="eager"
          />
        )}
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <!-- Main Content -->
        <div class="md:col-span-2">
          <!-- Description -->
          <div class="prose prose-lg max-w-none mb-8">
            <Content />
          </div>

          <!-- Incluye / No incluye -->
          <div class="grid md:grid-cols-2 gap-6 mb-8">
            {servicio.data.includes.length > 0 && (
              <div class="bg-green-50 rounded-lg p-6">
                <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
                  <svg class="w-5 h-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  Incluye
                </h3>
                <ul class="space-y-2">
                  {servicio.data.includes.map((item: string) => (
                    <li class="flex items-start">
                      <svg class="w-5 h-5 text-green-600 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      <span class="text-gray-700">{item}</span>
                    </li>
                  ))}
                </ul>
              </div>
            )}

            {servicio.data.excludes.length > 0 && (
              <div class="bg-red-50 rounded-lg p-6">
                <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
                  <svg class="w-5 h-5 mr-2 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  No incluye
                </h3>
                <ul class="space-y-2">
                  {servicio.data.excludes.map((item: string) => (
                    <li class="flex items-start">
                      <svg class="w-5 h-5 text-red-600 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                      </svg>
                      <span class="text-gray-700">{item}</span>
                    </li>
                  ))}
                </ul>
              </div>
            )}
          </div>
        </div>

        <!-- Sidebar - Info y Booking -->
        <div class="md:col-span-1">
          <div class="bg-white rounded-xl shadow-lg p-6 sticky top-24">
            <!-- Price -->
            <div class="mb-6">
              <p class="text-gray-600 text-sm mb-1">Desde</p>
              <p class="text-4xl font-bold text-blue-600">
                ${servicio.data.price.toLocaleString()}
              </p>
              <p class="text-gray-500 text-sm">por persona</p>
            </div>

            <!-- Info -->
            <div class="space-y-4 mb-6 pb-6 border-b">
              <div class="flex items-center text-gray-700">
                <svg class="w-5 h-5 mr-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div>
                  <p class="text-sm text-gray-500">Duración</p>
                  <p class="font-semibold">{servicio.data.duration}</p>
                </div>
              </div>

              <div class="flex items-center text-gray-700">
                <svg class="w-5 h-5 mr-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
                <div>
                  <p class="text-sm text-gray-500">Capacidad</p>
                  <p class="font-semibold">Hasta {servicio.data.capacity} personas</p>
                </div>
              </div>
            </div>

            <!-- CTA Buttons -->
            <div class="space-y-3">
              <a
                href="/contacto"
                class="block w-full bg-blue-600 text-white text-center py-4 rounded-lg font-semibold hover:bg-blue-700 transition-colors"
              >
                Reservar ahora
              </a>
              <a
                href="/contacto"
                class="block w-full border-2 border-blue-600 text-blue-600 text-center py-4 rounded-lg font-semibold hover:bg-blue-50 transition-colors"
              >
                Solicitar información
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Back to services -->
      <div class="mt-12 pt-8 border-t">
        <a
          href="/servicios"
          class="inline-flex items-center text-blue-600 hover:text-blue-700 font-semibold"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Ver todos los servicios
        </a>
      </div>
    </div>
  </article>
</Layout>
