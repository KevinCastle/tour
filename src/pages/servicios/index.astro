---
import Layout from '../../layouts/Layout.astro';
import ServiceCard from '../../components/ServiceCard.astro';
import { getCollection } from 'astro:content';

// Obtener todos los servicios
const servicios = await getCollection('servicios');

// Categorías para filtros
const categorias = [
  { value: 'all', label: 'Todos' },
  { value: 'tour', label: 'Tours' },
  { value: 'traslado', label: 'Traslados' },
  { value: 'formalidades', label: 'Formalidades' }
];
---

<Layout
  title="Nuestros Servicios - MyChileTour"
  description="Explora nuestra variedad de tours y servicios de traslado en Chile. Experiencias únicas adaptadas a tus necesidades."
>
  <!-- Header section -->
  <section class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-16">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Nuestros Servicios</h1>
      <p class="text-xl text-gray-100 max-w-2xl">
        Descubre nuestra variedad de tours y servicios diseñados para hacer de tu experiencia en Chile algo inolvidable
      </p>
    </div>
  </section>

  <!-- Filtros -->
  <section class="bg-white border-b sticky top-16 z-40">
    <div class="container mx-auto px-4 py-4">
      <div class="flex flex-wrap gap-2" id="filter-buttons">
        {categorias.map((cat, index) => (
          <button
            data-category={cat.value}
            class={`filter-btn px-4 py-2 rounded-lg font-medium transition-colors ${
              index === 0
                ? 'bg-blue-600 text-white'
                : 'bg-gray-100 text-gray-700 hover:bg-gray-200'
            }`}
          >
            {cat.label}
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- Servicios Grid -->
  <section class="container mx-auto px-4 py-16">
    <div id="service-count" class="mb-8">
      <p class="text-gray-600">
        <span id="count-number">{servicios.length}</span>
        <span id="count-text">servicios</span>
      </p>
    </div>

    <div id="services-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {servicios.map(servicio => (
        <div data-category={servicio.data.category} class="service-item">
          <ServiceCard
            title={servicio.data.title}
            description={servicio.data.description}
            price={servicio.data.price}
            duration={servicio.data.duration}
            capacity={servicio.data.capacity}
            image={servicio.data.images[0]}
            slug={servicio.slug}
            category={servicio.data.category}
          />
        </div>
      ))}
    </div>

    <!-- Mensaje cuando no hay servicios -->
    <div id="no-services" class="hidden text-center py-16">
      <svg class="w-24 h-24 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <h2 class="text-2xl font-bold text-gray-900 mb-2">
        No hay servicios en esta categoría
      </h2>
      <p class="text-gray-600 mb-8">
        Prueba con otra categoría o contáctanos para un servicio personalizado.
      </p>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-gray-50 py-16">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">
        ¿No encuentras lo que buscas?
      </h2>
      <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
        Contáctanos y diseñaremos un tour personalizado según tus preferencias
      </p>
      <a
        href="/contacto"
        class="inline-block bg-blue-600 text-white px-8 py-4 rounded-lg font-semibold hover:bg-blue-700 transition-colors"
      >
        Contactar ahora
      </a>
    </div>
  </section>
</Layout>

<script>
  // Filtrado de servicios con JavaScript
  const filterButtons = document.querySelectorAll('.filter-btn');
  const serviceItems = document.querySelectorAll('.service-item');
  const countNumber = document.getElementById('count-number');
  const countText = document.getElementById('count-text');
  const noServicesMsg = document.getElementById('no-services');

  filterButtons.forEach(button => {
    button.addEventListener('click', () => {
      const category = button.getAttribute('data-category');

      // Actualizar botones activos
      filterButtons.forEach(btn => {
        btn.classList.remove('bg-blue-600', 'text-white');
        btn.classList.add('bg-gray-100', 'text-gray-700');
      });
      button.classList.remove('bg-gray-100', 'text-gray-700');
      button.classList.add('bg-blue-600', 'text-white');

      // Filtrar servicios
      let visibleCount = 0;
      serviceItems.forEach(item => {
        const itemCategory = item.getAttribute('data-category');
        if (category === 'all' || itemCategory === category) {
          item.style.display = 'block';
          visibleCount++;
        } else {
          item.style.display = 'none';
        }
      });

      // Actualizar contador
      if (countNumber && countText) {
        countNumber.textContent = visibleCount;
        countText.textContent = visibleCount === 1 ? 'servicio' : 'servicios';
      }

      // Mostrar mensaje si no hay servicios
      if (noServicesMsg) {
        if (visibleCount === 0) {
          noServicesMsg.classList.remove('hidden');
        } else {
          noServicesMsg.classList.add('hidden');
        }
      }
    });
  });
</script>
